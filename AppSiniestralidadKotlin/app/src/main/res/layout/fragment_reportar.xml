<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.ui.fragments.reportarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/theme_gradients_background_blue">
            <ImageView
                android:layout_width="111dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/crashcar">
            </ImageView>
            <TextView
                android:layout_width="281dp"
                android:layout_height="115dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-11dp"
                android:layout_marginEnd="101dp"
                android:gravity="center"
                android:text="Reportar Siniestro"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="35dp">
                <CheckBox
                    android:id="@+id/cbPeaton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peaton" />
                <CheckBox
                    android:id="@+id/cbBiciusuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BiciUsuario" />
                <CheckBox
                    android:id="@+id/cbMotociclista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motociclista" />
                <CheckBox
                    android:id="@+id/cbVehiculoPrivado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehiculo Privado" />
                <CheckBox
                    android:id="@+id/cbVehiculoPublico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehiculo Publico" />
                <CheckBox
                    android:id="@+id/cbTransmilenio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transmilenio" />
                <CheckBox
                    android:id="@+id/cbVehiculoCarga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehiculo de carga larga y/o ancha" />
                <CheckBox
                    android:id="@+id/cbVehiculoAnimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehiculo de traccion animal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbOtro"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Otro. ¿Cúal?" />
                    <EditText
                        android:id="@+id/textOtro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:hint="separe por comas"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_avanzar_to_ubicacion"
                android:layout_width="345dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/purple"
                android:text="@string/siguiente"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
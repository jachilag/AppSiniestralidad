<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.ui.fragments.perfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/theme_gradients_background_blue"
            >

            <ImageView
                android:layout_width="111dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/avatarverde"

                ></ImageView>

            <TextView
                android:layout_width="281dp"
                android:layout_height="115dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-11dp"
                android:layout_marginEnd="101dp"
                android:gravity="center"
                android:text="Perfil"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold">
            </TextView>




        </RelativeLayout>

        <ScrollView
            android:layout_width="424dp"
            android:layout_height="498dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="345dp"
                    android:layout_height="20dp"
                    android:text="@string/titulo_nombres"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.272" />

                <EditText
                    android:id="@+id/registro_nombre"
                    android:layout_width="345dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="@string/hint_nombres"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/blue_king"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toTopOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="345dp"
                    android:layout_height="20dp"
                    android:text="@string/titulo_apellidos"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.39" />

                <EditText
                    android:id="@+id/registro_apellido"
                    android:layout_width="345dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="@string/hint_apellidos"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/blue_king"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="345dp"
                    android:layout_height="20dp"
                    android:text="@string/titulo_celular"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.513" />

                <EditText
                    android:id="@+id/registrar_celular"
                    android:layout_width="345dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="@string/hint_celular"
                    android:inputType="phone"
                    android:textColorHint="@color/blue_king"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="345dp"
                    android:layout_height="20dp"
                    android:text="@string/titulo_nacimiento"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.637" />


                <EditText
                    android:id="@+id/register_birthday"
                    android:layout_width="345dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="@string/fecha_nacimiento"
                    android:inputType="date"
                    android:textColorHint="@color/blue_king"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toTopOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="345dp"
                    android:layout_height="20dp"
                    android:text="@string/titulo_ciudad"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.755" />

                <Spinner
                    android:id="@+id/spinner_ciudad"
                    android:layout_width="345dp"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:hint="@string/hint_ciudad"
                    android:textColorHint="@color/blue_king"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintVertical_bias="0.0"
                    />

<!--                <EditText-->
<!--                    android:id="@+id/registrar_password"-->
<!--                    android:layout_width="345dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:ems="10"-->
<!--                    android:hint="@string/hint_contrasena"-->
<!--                    android:inputType="textPassword"-->
<!--                    android:textColorHint="@color/blue_king"-->
<!--                    android:layout_gravity="center"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/textView5"-->
<!--                    app:layout_constraintVertical_bias="0.0" />-->

                <Button
                    android:id="@+id/btn_perfil"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/purple"
                    android:text="@string/Boton_perfil"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/registrar_password"
                    app:layout_constraintVertical_bias="0.368" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>